contagem_por_nome = df.groupby('Customer').size()
print(contagem_por_nome)
# Criando o histograma Customer
plt.figure(figsize=(8, 6))
plt.bar(contagem_por_nome.index, contagem_por_nome.values, color='skyblue')
plt.xlabel('Customer')
plt.ylabel('Contagem')
plt.title('Histograma de Contagem de Customer')
plt.grid(axis='y', linestyle='--', alpha=0.7)
plt.show()
contagem_por_nome_plan = df.groupby('Customer Plant').size()
print(contagem_por_nome_plan)
# Criando o histograma Customer Plan
